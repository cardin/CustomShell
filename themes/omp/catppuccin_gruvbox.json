{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "console_title_template": "{{ if .Env.SSH_CONNECTION }}{{ .HostName }}> {{ end }}{{ .Folder }}",
  "final_space": true,
  "palette": {
    "rosewater": "#f5e0dc",
    "flamingo": "#f2cdcd",
    "pink": "#f5c2e7",
    "mauve": "#cba6f7",
    "red": "#f38ba8",
    "maroon": "#eba0ac",
    "peach": "#fab387",
    "yellow": "#f9e2af",
    "green": "#a6e3a1",
    "teal": "#94e2d5",
    "sky": "#89dceb",
    "sapphire": "#74c7ec",
    "blue": "#89b4fa",
    "lavender": "#b4befe",
    "text": "#cdd6f4",
    "subtext1": "#bac2de",
    "subtext0": "#a6adc8",
    "overlay2": "#9399b2",
    "overlay1": "#7f849c",
    "overlay0": "#6c7086",
    "surface2": "#585b70",
    "surface1": "#45475a",
    "surface0": "#313244",
    "base": "#1e1e2e",
    "mantle": "#181825",
    "crust": "#11111b"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "foreground": "p:crust",
          "background": "p:red",
          "leading_diamond": "",
          "options": {
            "windows": "",
            "ubuntu": ""
          },
          "template": "{{ .Icon }}"
        },
        {
          "type": "session",
          "style": "powerline",
          "foreground": "parentForeground",
          "background": "parentBackground",
          "template": " {{ .UserName }}{{ if .SSHSession }}  {{ .HostName }}{{ end }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "foreground": "parentForeground",
          "background": "p:peach",
          "powerline_symbol": "",
          "template": "  {{ .Path }}{{ if not .Writable }} 󰌾{{ end }} ",
          "options": {
            "max_depth": 2,
            "style": "agnoster_short",
            "hide_root_location": true,
            "display_root": true
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "parentForeground",
          "background": "p:yellow",
          "powerline_symbol": "",
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}  {{ .StashCount }}{{ end }} ",
          "options": {
            "branch_icon": " "
          }
        },
        {
          "type": "python",
          "style": "accordion",
          "foreground": "parentForeground",
          "background": "p:green",
          "powerline_symbol": "",
          "template": "  {{ .Major }}.{{ .Minor }}{{ if .Venv }} ({{ .Venv }}){{ end }} "
        },
        {
          "type": "node",
          "style": "accordion",
          "foreground": "parentForeground",
          "background": "p:sapphire",
          "powerline_symbol": "",
          "template": " 󰎙 {{ .Major }} "
        },
        {
          "type": "time",
          "style": "diamond",
          "foreground": "parentForeground",
          "background": "p:lavender",
          "powerline_symbol": "",
          "trailing_diamond": "",
          "template": "  {{ .CurrentDate | date .Format }} ",
          "options": {
            "time_format": "15:04"
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:subtext1",
          "template": "  {{ .FormattedMs }} ",
          "options": {
            "threshold": 500
          }
        },
        {
          "type": "sysinfo",
          "style": "plain",
          "foreground": "p:red",
          "template": "{{ if gt .PhysicalPercentUsed 90 }}  {{ round .PhysicalPercentUsed .Precision }}% (Swap: {{ round .SwapPercentUsed .Precision }}%) {{ end }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:red{{ else }}p:green{{ end }}"
          ],
          "template": "❯",
          "options": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}
