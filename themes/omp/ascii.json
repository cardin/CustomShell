{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "console_title_template": "{{ if .Env.SSH_CONNECTION }}{{ .HostName }}> {{ end }}{{ .Folder }}",
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "powerline",
          "foreground": "cyan",
          "template": "{{ .UserName }}{{ if .SSHSession }}@{{ .HostName }}{{ end }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "foreground": "white",
          "template": "in {{ .Path }}{{ if not .Writable }} [RO]{{ end }} ",
          "options": {
            "max_depth": 2,
            "style": "agnoster_short",
            "hide_root_location": true,
            "display_root": true
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "yellow",
          "template": "via git {{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} W:{{ .Working.String }}{{ end }}{{ if .Staging.Changed }} S:{{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} stash:{{ .StashCount }}{{ end }} ",
          "options": {
            "branch_icon": ""
          }
        },
        {
          "type": "python",
          "style": "accordion",
          "foreground": "green",
          "template": "via py {{ .Major }}.{{ .Minor }}{{ if .Venv }} ({{ .Venv }}){{ end }} "
        },
        {
          "type": "node",
          "style": "accordion",
          "foreground": "blue",
          "template": "via node {{ .Major }} "
        },
        {
          "type": "time",
          "style": "powerline",
          "foreground": "magenta",
          "template": "at {{ .CurrentDate | date .Format }} ",
          "options": {
            "time_format": "15:04"
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "white",
          "template": "in {{ .FormattedMs }} ",
          "options": {
            "threshold": 500
          }
        },
        {
          "type": "sysinfo",
          "style": "plain",
          "foreground": "red",
          "template": "{{ if gt .PhysicalPercentUsed 90 }}with mem {{ round .PhysicalPercentUsed .Precision }}% swap {{ round .SwapPercentUsed .Precision }}% {{ end }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}red{{ else }}green{{ end }}"
          ],
          "template": "#",
          "options": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}
